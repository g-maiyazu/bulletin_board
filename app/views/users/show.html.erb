<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <p>ユーザーネーム：<%= @user.name %></p>
      <p>自己紹介：<%= @user.introduction %></p>
    </section>
    <% if current_user %>
      <%= link_to edit_user_path, class: "btn btn-primary" do %>
        <i class="fab fa fa-edit"></i> プロフィール編集
      <% end %>
    <% end %>
  </aside>
</div>
