<% provide(:title, @user.name) %>

<div class="wrapper wrapper__bg">
	<div class="container">
    <h1 class="form-title mb-4 text-center">プロフィール</h1>
    <section class="user_info">
      <div class="d-none d-md-block pr-5">
        <% if @user.avatar?%>
          <%= image_tag(@user.avatar.url, size: "80x80", class: "rounded-circle z-depth-0", alt: "avatar image") %>
        <% else %>
          <%= image_tag("no_user.png", size: "80x80", class: "rounded-circle z-depth-0", alt: "avatar image") %>
        <% end %>
      </div></p>
      <p>ユーザーネーム：<%= @user.name %></p>
      <p>自己紹介：<%= @user.introduction %></p>
    </section></p>
    <% if @user == current_user %>
      <div class="edit-profile-link">
        <%= link_to edit_user_path, class: "btn-square" do %>
          <i class="fab fa fa-edit"></i> プロフィール編集
        <% end %>
      </div>
      <div class="user-delete-link">
      <%= link_to registration_path(@user), class: "btn-square", method: :delete, data:
        { confirm: "本当に退会してよろしいですか？", cancel: 'キャンセル', commit: '退会する'}, title: '削除確認' do %>
        <i class="fas fa-user-slash"></i> 退会申請
      <% end %>
    <% end %>
    </div>
  </div>
</div>
