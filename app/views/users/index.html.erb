<% provide(:title, 'すべてのユーザー') %>

<div class="wrapper wrapper__bg">
	<div class="container">
    <h1 class="form-title mb-4 text-center">すべてのユーザー</h1>
    <p>ユーザー数：<%= @users_count%></p>
    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= link_to user.name, user %>
        </li>
      <% end %>
    </ul>
    <%= paginate @users %>
  </div>
</div>
