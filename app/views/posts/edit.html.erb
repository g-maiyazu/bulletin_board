<% provide :title, "スレッド編集" %>

<div class="wrapper wrapper__bg">
	<div class="container">
	 	<h1 class="form-title mb-4 text-center">スレッド編集</h1>
    <%= link_to @post.title, post_path(@post) %>
	 	<% if @post.errors.any? %>
	 	  <%= @post.errors.full_messages %>
	 	<% end %>
	 	<div class="panel form">
	 	  <%= form_for @post do |f| %>
	 	    <div>
	 	      <div class="form--label">タイトル</div>
	 	      <div class="form--input">
	 	        <%= f.text_field :title %>
	 	      </div>
	 	    </div>
        <div>
	 	      <div class="form--label">内容</div>
	 	      <div class="form--input">
	 	        <%= f.text_field :caption %>
	 	      </div>
	 	    </div>
	 	    <%= f.submit "編集を完了", { class: "btn btn-primary" } %>
 	    <% end %>
	 	</div>
  </div>
</div>