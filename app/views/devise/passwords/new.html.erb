<% provide :title, "パスワード再設定" %>

<div class="custom-form">
  <h2 class="form-title mb-4 text-center">パスワード再設定</h2>

  <div class="custom-form">
    <div class="container">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions text-center mb-4">
          <%= f.submit "メール送信", { class: "btn submit-btn" } %>
        </div><br />
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>